<div class="container"></br>
	<h1><%=@cur_rep.name%></h1>
	<div class='container'>
		<img src="<%=@cur_rep.image_url%>">
	</div>
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th>#</th>
					<th>Species</th>
					<th>Sex</th>
					<th>Weight</th>
					<th>Morph</th>
					<th>Sire</th>
					<th>Dam</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th><%=@cur_rep.id%></th>
					<th><%=@cur_rep.species%></th>
					<th><%=@cur_rep.sex%></th>
					<th><%=@cur_rep.weight%> gram(s)</th>
					<th><%=@cur_rep.morph%></th>
					<th><a href="/profile/<%=@cur_rep.sire_id%>"><%=@cur_rep.sire_id%></a></th>
					<th><a href="/profile/<%=@cur_rep.dam_id%>"><%=@cur_rep.dam_id%></a></th>
				</tr>
			</tbody>
		</table>
	</div>
</div>